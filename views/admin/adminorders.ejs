<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin page for users</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css"/>
</head>

<body>
    <div class="admin-panel">
        <%- include('../parts/adminheader.ejs') %>
    </div>
    <h1>Orders</h1>
    <a href="">Add orders</a>
    <br>
    <br>
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th>order item</th>
                <th>shipping address1</th>
                <th>shipping address2</th>
                <th>city</th>
                <th>zip</th>
                <th>country</th>
                <th>phone</th>
                <th>status</th>
                <th>totalPrice</th>
                <th>user</th>
                <th>dataOrdered</th>
                <th>Edit status</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><a href="/orders/<%= order.id %>">view the whole order</a></td>
                    <td><%= order.shippingAddress1 %></td>
                    <td><%= order.shippingAddress2 %></td>
                    <td><%= order.city %></td>
                    <td><%= order.zip %></td>
                    <td><%= order.country %></td>
                    <td><%= order.phone %></td>
                    <td><%= order.status %></td>
                    <td><%= order.totalPrice %></td>
                    <td><%= order.user %></td>
                    <td><%= new Date(order.ordered).toLocaleDateString() %></td>
                    <td><a href="/orders/<%= order.id %>/edit">edit status</a></td>
                </tr>
            <% }); %>
            
            
        </tbody>
    </table>
</body>

</html>
