    <!-- <link rel="stylesheet" href="../css/product-details.css"> -->
</head>

<body>
    <header class="flex">
        <a href="http://localhost:4000/api/v1" class="logo">
            <i class="fa-solid fa-bag-shopping"></i>
            <span style="font-weight: bold;">YMSS</span>
            <p style="letter-spacing: 0.5px;font-size: large;margin-top: 9%;">Shopping</p>
        </a>
    </header>
    <div class="container">
        <h2>Login</h2>
        <form id="loginForm" action="/api/v1/user/login" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="passwordHash">Password:</label>
                <input type="password" id="passwordHash" name="passwordHash" required>
            </div>
            <div class="submitButton">
                <button type="submit" id="sign">Login</button>
            </div>
        
        </form>
        <div class="link">
            <a href="http://localhost:4000/api/v1/user/register">Don't have an account? Register here</a>
        </div>

    </div>
    <footer class="footer">Designed and Developed by
        <span>
            Ahmed Mohsen , Salma Ayman , Sohaila Ahmed and Youssef Mamdouh</span> <i
            class="fa-regular fa-copyright"></i> 2024
    </footer>
    <script src="/script.js"></script>
</body>

</html>